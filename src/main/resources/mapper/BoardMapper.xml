<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatisrestapi.dao.BoardDao">



    <select id="getBoardList" resultType="com.mybatisrestapi.dto.BoardDto">
        select id, title, content, author, del_yn
        from board
        where del_yn = 'N'
    </select>


    <insert id="newBoard"
            parameterType="com.mybatisrestapi.dto.BoardDto"
            useGeneratedKeys ="true"
            keyProperty="id">

        insert into board(title, content, author)
        values (#{title}, #{content}, #{author})


    </insert>

</mapper>